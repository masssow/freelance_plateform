{% extends 'base.html.twig' %}

{% block title %}Hello FreelanceRegisterController!{% endblock %}

{% block body %}
 <h1>Inscription Freelance</h1>

    {{ form_start(form) }}
    
    <div class="form-group">
        {{ form_label(form.email, 'Email') }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="form-group">
        {{ form_label(form.password, 'Mot de passe') }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.password) }}
    </div>

    <div class="form-group">
        {{ form_label(form.portfolio, 'Portfolio') }}
        {{ form_widget(form.portfolio, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.portfolio) }}
    </div>

    {# <button type="submit" class="btn btn-primary">{{ form.vars.submit_label|default('S\'inscrire') }}</button> #}

    {{ form_end(form) }}
{% endblock %}